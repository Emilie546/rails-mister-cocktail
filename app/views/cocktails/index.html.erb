

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/collection/9282742);">
  <div class="container">
    <h1>Fancy Cocktails</h1>
    <p>This is our mixology book</p>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-outline-light" %>
  </div>
</div>

<div class="container">
  <div class="cards">
    <% @cocktails.each do |c| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path c.photo.key, height: 300, width: 400, crop: :fill %>')">
      <%= link_to c.name, cocktail_path(c) %>
    </div>
    <% end %>
  </div>

</div>

