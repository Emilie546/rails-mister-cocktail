<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">

  <div class="container">
    <h1>Fancy Cocktails</h1>
    <h2><%= @cocktail.name %></h2>
    <%= link_to "List", cocktails_path, class: "btn btn-outline-light" %>
    <%= link_to "Add dose", new_cocktail_dose_path(@cocktail), class: "btn btn-outline-light" %>
  </div>
</div>
<div class="container">
  <div class="card">
   <ul>
     <% @cocktail.doses.each do |d| %>
     <li><p><%= d.ingredient.name %> (<%= d.description %>)   <%= link_to dose_path(d),
        method: :delete,
          data: { confirm: "Are you sure?" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %></p>
      </li>
     <% end %>
   </ul>
  </div>
</div>
